<Window x:Class="NuGet.Client.VisualStudio.UI.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:resx="clr-namespace:NuGet.Client.VisualStudio.UI.Resources"
        mc:Ignorable="d"
        Background="{DynamicResource {x:Static resx:Brushes.HeaderBackground}}"
        Foreground="{DynamicResource {x:Static resx:Brushes.UIText}}"
        Width="450"
        Height="350"
        MinHeight="230"
        MinWidth="300"
        d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
        <RichTextBox Margin="20, 5, 20, 5" AcceptsReturn="True" IsReadOnly="True" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto" x:Name="MessagePane">
        </RichTextBox>
    </DockPanel>
</Window>